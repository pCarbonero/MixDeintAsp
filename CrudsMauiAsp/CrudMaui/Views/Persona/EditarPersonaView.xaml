<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudMaui.Views.Persona.EditarPersonaView"
             xmlns:vm="clr-namespace:CrudMaui.ViewModels">
    <ContentPage.BindingContext>
        <vm:clsEditarPersonaVM/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Entry Text="{Binding PersonaEditada.Nombre}"/>
        <Entry Text="{Binding PersonaEditada.Apellidos}"/>
        <Entry Text="{Binding PersonaEditada.FechaNacimiento}"/>
        <Entry Text="{Binding PersonaEditada.Direccion}"/>
    </VerticalStackLayout>
</ContentPage>
